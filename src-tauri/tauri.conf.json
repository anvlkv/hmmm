{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "reproduce-deadlock",
  "version": "0.1.0",
  "identifier": "com.reproduce-deadlock.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "reproduce-deadlock",
        "width": 800,
        "height": 600,
        "visible": false
      },
      {
        "title": "reproduce-deadlock",
        "label": "splashscreen",
        "url": "/splash.html",
        "width": 445,
        "height": 256,
        "decorations": false,
        "shadow": true
      }
    ],
    "security": {
      "csp": null,
      "pattern": {
        "use": "isolation",
        "options": {
          "dir": "../dist-isolation"
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
